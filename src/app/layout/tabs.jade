// Create tabs with an icon and label, using the tabs-positive style.
// Each tab's child <ion-nav-view> directive will have its own
// navigation history that also transitions its views in and out.


ion-tabs.tabs-stable.tabs-icon-top.tabs-color-positive(ng-cloak)
  ion-tab(title="Favorites" icon-off="ion-ios-star-outline" icon-on="ion-ios-star" href="#/tab/favorites")
    ion-nav-view(name="tab-favorites")
  ion-tab(title="Recents" icon-off="ion-ios-clock-outline" icon-on="ion-ios-clock" href="#/tab/recents")
    ion-nav-view(name="tab-recents")
  ion-tab(title="Contacts" icon-off="ion-ios-person-outline" icon-on="ion-ios-person" href="#/tab/contacts")
    ion-nav-view(name="tab-contacts")
  ion-tab(title="Chats" icon-off="ion-ios-chatboxes-outline" icon-on="ion-ios-chatboxes" href="#/tab/chats")
    ion-nav-view(name="tab-chats")
  ion-tab(title="Settings" icon-off="ion-ios-cog-outline" icon-on="ion-ios-cog" href="#/tab/settings")
    ion-nav-view(name="tab-settings")
